@model IEnumerable<WorkLog.Models.Musteri>

@{
    ViewData["Title"] = "Müşteri Listesi";
}

<h2 class="custom-orange">Müşteriler</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Yeni Müşteri</a>

<table class="table table-bordered">
    <thead>
        <tr>
            @* <th>#</th> *@
            <th class="custom-orange">Ad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* <td>@item.Id</td> *@
                <td>@item.Ad</td>
            </tr>
        }
    </tbody>
</table>
